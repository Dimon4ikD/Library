<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Year</th>
      <th>Author</th>
      <th>Pages amount</th>
      <th>Isbn</th>
      <th>Udc</th>
      <th>Lbc</th>
      <th>Shelf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.amount %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= book.pages_amount %></td>
        <td><%= book.isbn %></td>
        <td><%= book.udc %></td>
        <td><%= book.lbc %></td>
        <td><%= book.shelf %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

