    .col-md-4
      .list-group
        .list-group-item
          -if !bookd.image.blank?
            = image_tag bookd.image.url(:medium), height:"265", style: "display: block; margin: 0px auto;", alt: bookd.name, class: 'img-responsive'
          -else
            =image_tag ("blank.jpeg"),src: root_path, height:"265", style: "display: block; margin: 0px auto;", data: {toggle: "collapse", target:"#menu"}
        .list-group-item
          %h4
            =bookd.name
        .list-group-item
          Автор
          .badge
            =bookd.author
        .list-group-item
          Цена:
          .badge
            =number_to_currency(bookd.price)

        .list-group-item
          .row
            .col-xs-3
              .button= link_to '', line_items_path(book_id: bookd.id), data:{method: :post, remote: :true}, class:"btn btn-success glyphicon glyphicon-plus", title: "Добавить в корзину"
