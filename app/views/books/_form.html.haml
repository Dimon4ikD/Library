= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :amount
    %br/
    = f.number_field :amount
  .field
    = f.label :year
    %br/
    -#= f.date_select :year, :discard_year => true
    = f.text_field :year
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :pages_amount
    %br/
    = f.number_field :pages_amount
  .field
    = f.label :isbn
    %br/
    = f.text_field :isbn
  .field
    = f.label :udc
    %br/
    = f.text_field :udc
  .field
    = f.label :lbc
    %br/
    = f.text_field :lbc
  .field
    = f.label :price
    %br/
    = f.number_field :price
  .field
    = f.label :description
    %br/
    = f.text_field :description
  -if !@book.image.blank?
    = image_tag @book.image.url(:medium),size:"173x232", alt: @book.name, class: 'img-responsive'

  .field
    = f.label :image
    %br/
    = f.file_field :image
  .field
    = f.label :document
    %br/
    = f.file_field :document

  .actions=f.submit nil, class: "btn btn-primary"

