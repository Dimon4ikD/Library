%p#notice= notice
%h1 Listing Users
%table
  %thead
    %tr
      %th Почта
      %th Пароль
      %th Телефон
      %th Адрес
      %th Роль
      %th Имя
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.password
        %td= user.phone
        %td= user.address
        %td= user.role
        %td= user.name
        %td= link_to 'Показать', user
        %td= link_to 'Изменить', edit_user_path(user)
        %td= link_to 'Удалить', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Новый пользователь', new_user_path
